<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>NewFilter</filter-name>
        <filter-class>authentication.NewFilter</filter-class>
    </filter>
    <filter>
        <filter-name>authenfilter</filter-name>
        <filter-class>authentication.authenfilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenfilter</filter-name>
        <url-pattern>/auth/ToC</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenfilter</filter-name>
        <url-pattern>/auth/ToB</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authenfilter</filter-name>
        <url-pattern>/auth/ToA</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ToA</servlet-name>
        <servlet-class>controller.ToA</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToA</servlet-name>
        <url-pattern>/auth/ToA</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToB</servlet-name>
        <servlet-class>controller.ToB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToB</servlet-name>
        <url-pattern>/auth/ToB</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ToC</servlet-name>
        <servlet-class>controller.ToC</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToC</servlet-name>
        <url-pattern>/auth/ToC</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>authentication.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
